{
  "name": "hue-filament",
  "main": "dist/index.js",
  "description": "GraphQL for Philips Hue",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "Jesse Gibson <Jesse_Gibson@me.com>",
  "repository": "https://github.com/PsychoLlama/filament",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "build": "babel --copy-files src/ -d dist/ --ignore __mocks__,__tests__",
    "build:watch": "npm run build -- --watch",
    "start": "pm2 start --no-daemon .",
    "start:watch": "nodemon . -e js,graphql",
    "register": "hue-register filament > bridge.json",
    "precommit": "lint-staged",
    "prettier": "prettier"
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier -- --write",
      "git add"
    ],
    "*.graphql": [
      "npm run prettier -- --write",
      "git add"
    ]
  },
  "dependencies": {
    "change-case": "^3.0.1",
    "clone": "^2.1.1",
    "dataloader": "^1.3.0",
    "express": "^4.15.4",
    "express-graphql": "^0.6.7",
    "graphql": "^0.13.1",
    "hue-colors": "^0.5.0",
    "hue-connect": "^0.2.0",
    "invariant": "^2.2.2",
    "node-fetch": "^2.0.0",
    "pm2": "^2.6.1",
    "rc": "^1.2.1",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015-node": "^6.1.1",
    "eslint": "^4.4.1",
    "eslint-config-llama": "^3.0.0",
    "eslint-config-prettier": "^2.3.0",
    "husky": "^0.14.3",
    "jest": "^22.3.0",
    "lint-staged": "^6.1.1",
    "nock": "^9.0.14",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/test-setup/",
      "<rootDir>/src/index.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "functions": 100,
        "branches": 100,
        "lines": 100
      }
    }
  }
}
