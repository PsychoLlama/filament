{
  "name": "filament",
  "main": "dist/index.js",
  "description": "GraphQL for Philips Hue",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "Jesse Gibson <Jesse_Gibson@me.com>",
  "repository": "https://github.com/PsychoLlama/filament",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "build": "babel --copy-files src/ -d dist/ --ignore __mocks__,__tests__",
    "build:watch": "npm run build -- --watch",
    "start": "pm2 start --no-daemon .",
    "start:prod": "NODE_ENV=production yarn -s start",
    "start:watch": "nodemon . -e js,graphql",
    "register": "hue-register filament > bridge.json",
    "prettier": "prettier"
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier -- --write",
      "git add"
    ],
    "*.graphql": [
      "npm run prettier -- --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.6.2",
    "change-case": "^3.1.0",
    "clone": "^2.1.2",
    "dataloader": "^1.3.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8",
    "hue-colors": "^0.5.0",
    "hue-connect": "^0.3.0",
    "invariant": "^2.2.4",
    "node-fetch": "^2.6.0",
    "pm2": "^3.5.1",
    "raven": "^2.6.4",
    "rc": "^1.2.8",
    "tinycolor2": "^1.4.1"
  },
  "browserslist": [
    "maintained node versions"
  ],
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.4.0",
    "eslint-config-llama": "^3.0.0",
    "eslint-config-prettier": "^6.3.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.1",
    "nock": "^11.3.5",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/test-setup/",
      "<rootDir>/src/index.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "functions": 100,
        "branches": 100,
        "lines": 100
      }
    }
  }
}
