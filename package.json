{
  "name": "filament",
  "main": "dist/index.js",
  "description": "GraphQL for Philips Hue",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "Jesse Gibson <Jesse_Gibson@me.com>",
  "repository": "https://github.com/PsychoLlama/filament",
  "scripts": {
    "test:unit": "jest --color",
    "test:lint": "eslint src/ --color",
    "test": "./run-tests",
    "build": "babel --copy-files src/ -d dist/ --ignore __mocks__,__tests__",
    "build:watch": "npm run build -- --watch",
    "start": "pm2 start --no-daemon .",
    "start:prod": "NODE_ENV=production yarn -s start",
    "start:watch": "nodemon . -e js,graphql",
    "register": "hue-register filament > bridge.json",
    "prettier": "prettier"
  },
  "lint-staged": {
    "*.js": [
      "yarn run prettier --write"
    ],
    "*.graphql": [
      "yarn run prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "dependencies": {
    "@babel/runtime": "7.15.4",
    "change-case": "4.1.2",
    "clone": "2.1.2",
    "dataloader": "2.0.0",
    "express": "4.17.1",
    "express-graphql": "0.12.0",
    "graphql": "15.6.0",
    "hue-colors": "0.5.4",
    "hue-connect": "0.3.0",
    "invariant": "2.2.4",
    "node-fetch": "2.6.5",
    "pm2": "5.1.2",
    "raven": "2.6.4",
    "rc": "1.2.8",
    "tinycolor2": "1.4.2"
  },
  "browserslist": [
    "maintained node versions"
  ],
  "devDependencies": {
    "@babel/cli": "7.15.7",
    "@babel/core": "7.15.5",
    "@babel/plugin-transform-async-to-generator": "7.14.5",
    "@babel/plugin-transform-runtime": "7.15.0",
    "@babel/preset-env": "7.15.6",
    "babel-eslint": "10.1.0",
    "eslint": "7.32.0",
    "eslint-config-llama": "3.0.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.2",
    "jest": "27.2.4",
    "lint-staged": "11.2.0",
    "nock": "13.1.3",
    "nodemon": "2.0.13",
    "prettier": "2.4.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/test-setup/",
      "<rootDir>/src/index.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "functions": 100,
        "branches": 100,
        "lines": 100
      }
    }
  }
}
